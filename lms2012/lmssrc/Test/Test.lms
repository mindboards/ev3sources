subcall   SensorMap
{
  IN_16   Xcur
  IN_16   Ycur
  OUT_8   Layer
  OUT_8   Port

  MOVE16_8(Ycur,Layer)
  DIV8(Layer,2,Layer)
  MOVE16_8(Xcur,Port)
  AND16(Ycur,1,Ycur)
  JR_NEQ16(Ycur,0,NotOut)
  ADD8(Port,16,Port)
